
extends ../layout

block content
	em.muted browse profiles:
	.page-header
		h1
			| Profiles 
			small search
	.row
		.span3
			.well
				h6 Search
				.input-append
					input.input-small(type='text')
					button.btn(type='button')
						i.icon-search
		.span8.offset1
			- if (users.length !== 0)
				each usr in users
					.sub_main.rounded(style='width: auto; margin-bottom: 10px; padding: 20px;')
						a.btn.btn-large.btn-primary.pull-right(href='/profiles/#{usr._id}')
							i.icon-eye-open.icon-white 
							|  View
						img.pull-left(src='https://graph.facebook.com/#{usr.fb.id}/picture?type=square', alt='#{usr.fullName')
						h3 #{usr.fullName} 
						span.muted #{usr.bio} 
			- else
				.alert.alert-info 
					button.close(data-dismiss='alert') Ã—
					| No public profiles found :(
