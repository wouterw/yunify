!!! 5
html(lang='en')
	head
		include ../includes/head
		block styles
			include ../includes/styles-desktop

	body
		#header_image
			img(src='/desktop/img/header_home.png', alt='Header home')
		#header
			#header_container
				- if (everyauth.loggedIn)
					nav
						ul
							li.nav_item
								a(href='/') Home
							li.nav_item
								a(href='/me') Me
							li.nav_item
								a(href='/tasks') Tasks
							li.nav_item
								a(href='/roomies') Roomies
							li.nav_item
								a(href='/groups') Groups
							li.nav_item
								a.sign_out(href='/logout') Sign Out
					.btn-group#dropdown_nav
						button.btn.btn-small#dropdown_button(data-toggle="dropdown") Go to...
						button.btn.btn-small.dropdown-toggle#dropdown_button_arrow(data-toggle="dropdown")
							span.caret
						ul.dropdown-menu
							li
								a(href='/') Home
							li
								a(href='/me') Me
							li
								a(href='/tasks') Tasks
							li
								a(href='/roomies') Roomies
							li
								a(href='/groups') Groups
							li
								a(href='/logout') Sign Out
				- else
					nav
						ul
							li.nav_item
								a.sign_in(href='/auth/facebook') Sign in
					.btn-group#dropdown_nav
						a.btn.btn-small#signout_button(href='/auth/facebook') Sign in

		.container
			block content
		footer.footer
			.wrapper
				ul.foot_links
					li
						a(href='/about') About
					li |
					li
						a(href='/team') Team
					li |
					li
						a(href='mailto:codability@gmail.com') Contact
					li.copyright_txt
						| Codability &copy; 2012

		block scripts
			include ../includes/scripts-desktop
	script(type='text/javascript')
		$(document).ready(function() {
			$("nav select").change(function() {
				window.location = $(this).find("option:selected").val();
			});
		});

