!!! 5
html(lang='en')
head
	meta(charset='utf-8')
	title Wall / Yunify
	meta(name='viewport', content='width=device-width, initial-scale=1.0')
	meta(name='description', content='Yunify, Living together made easy')
	link(rel='stylesheet', href='/css/wall.css')
body
	#section_home.slide_page(style='left: 0px;')
		.top_title
			p
				span.bold_text Hello&nbsp;
				| #{user.fullName}.
		hr
		#home_tumb_text
			p
				| What would you like to&nbsp;
				span.yellow_text do
				| ?
		#wrapper_thumbs
			a.thumb(onclick='window.goToTaskScreen();')
				img(src='/img/tile_tasks.png', alt='alt')
			a.thumb(onclick='window.goToFacebookScreen();')
				img(src='/img/tile_facebook.png', alt='alt')
			a.thumb(onclick='window.goToTwitterScreen();')
				img(src='/img/tile_twitter.png', alt='alt')
			a.thumb(onclick='window.goToPhotoboothScreen();')
				img(src='/img/tile_photobooth.png', alt='alt')
			a.thumb(onclick='window.goToAchieveScreen();')
				img(src='/img/tile_achieve.png', alt='alt')
		hr
		#home_bottom_text
			p
				span#big_text Right now&nbsp;
				| it's&nbsp;
				span.yellow_text.jclock
				| &nbsp;and&nbsp;
				span#weather.yellow_text
				| &nbsp;outside!
	#section_tasks.slide_page(style='left: 1920px;')
		#todo-list(data-bind='foreach: tasks')
			.sub_main.rounded
				p(data-bind='text: title')
				p(data-bind='text: completed')

	#section_facebook.slide_page(style='left: 3840px;')
		#facebookSection.socialSection
			.socialWrapper(data-bind='foreach: posts')
				//
					ko if: isStatus
				.facebookBlock
					img(data-bind='attr: { src: FromPicture }', alt='alt')
					p.facebookText
						span.title(data-bind='text:From')
						br
						span(data-bind='text:Message')
						br
						span.facebookUnderscript
							span(data-bind='text:Created')
							| ·
							span(data-bind='text:Comments')
							| comments ·
							span(data-bind='text:Likes')
							| likes
				//
					/ko
				//
					ko if: isPhoto
				.facebookBlock
					img(data-bind='attr: { src: FromPicture }', alt='alt')
					p.facebookText
						span.title(data-bind='text:From')
						br
						span.fbPhoto
							img(data-bind='attr: { src: Photo }', alt='alt')
							a(data-bind='text:Story')
							span(data-bind='text:PhotoDescription')
						br
						span.facebookUnderscript
							span(data-bind='text:Created')
							| ·
							span(data-bind='text:Comments')
							| comments ·
							span(data-bind='text:Likes')
							| likes
				//
					/ko
				//
					ko if: isLink
				.facebookBlock
					img(data-bind='attr: { src: FromPicture }', alt='alt')
					p.facebookText
						span.title(data-bind='text:From')
						br
						span(data-bind='text:Message')
						span.linkBlock
							img(data-bind='attr: { src: LinkImage }', alt='alt')
							a(data-bind='text:LinkName')
							br
							span(data-bind='text:LinkDescription')
						br
						span.facebookUnderscript
							span(data-bind='text:Created')
							| ·
							span(data-bind='text:Comments')
							| comments ·
							span(data-bind='text:Likes')
							| likes
				//
					/ko
	#section_twitter.slide_page(style='left: 5760px;')
		| TWITTER
	#section_photobooth.slide_page(style='left: 7680px;')
		| PHOTOBOOTH
	#section_achieve.slide_page(style='left: 11520px;')
		| ACHIEVE
	script(src='/js/lib/jquery-1.7.2.min.js')
	script(src='/js/lib/underscore.min.js')
	script(src='/js/lib/knockout-2.0.0.min.js')
	script(src='/js/lib/jquery.jclock.js')
	script(src='/js/lib/jquery.simpleWeather-2.0.1.min.js')
	//
		script(src='/js/lib/kinect.js')
		script(src='/js/wall.kinect.js')
	script(src='/js/wall.utils.js')
	script(src='/socket.io/socket.io.js')
	script
		var fb_access_token = !{JSON.stringify(everyauth.facebook.accessToken)};
		var groupId = !{JSON.stringify(user.group)};
	script(src='/js/wall.knockout.js')
