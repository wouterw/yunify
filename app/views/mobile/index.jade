extends ../layouts/layout-mobile

block content

	div#index-page(data-role='page')
		div(data-role='header', data-id='nav', data-position='fixed')
			a(href='#index', data-icon='home', data-transition='fade') Home
			h1 Yunify
			- if (!everyauth.loggedIn)
				a(href='/auth/facebook', data-icon='home', data-theme='b') Login
			- else
				a(href='/mobile/logout', data-icon='home', data-theme='b') Logout

		div(data-role='navbar')
			ul
				li
					a(href='', data-icon='home', class='ui-btn-active') Home
				li
					a(href='#tasks', data-icon='check') Tasks
				li
					a(href='#users', data-icon='search') Users
				li
					a(href='#groups', data-icon='search') Groups

		div(data-role='content')
			h1 Welkom, #{user.fullName}!

			h2 Change your status
			section#my-status


	div#search-users-page(data-role='page')
		div(data-role='header')
			a(href='', data-icon='home', data-transition='fade') Home
			h1 User Browser

		div(class='ui-bar ui-bar-c')
			input(type='search', class='search-query', placeholder='Search')

		div(data-role='content')
			ul(data-role='listview', data-autodividers='true', id='user-list')


	div#user-details-page(data-role='page')
		div(data-role='header')
			a(href='', data-icon='home', data-transition='fade') Home
			h1 User Details

		div(data-role='content')
			section#user-details


	div#search-groups-page(data-role='page')
		div(data-role='header')
			a(href='', data-icon='home', data-transition='fade') Home
			h1 Group Browser

		div(class='ui-bar ui-bar-c')
			input(type='search', class='search-query', placeholder='Search')

		div(data-role='content')
			ul(data-role='listview', data-autodividers='true', id='group-list')


	div#group-details-page(data-role='page')
		div(data-role='header')
			a(href='', data-icon='home', data-transition='fade') Home
			h1 Group Details

		div(data-role='content')
			section#group-details


	div#tasks-page(data-role='page')
		div(data-role='header')
			a(href='', data-icon='home', data-transition='fade') Home
			h1 Tasks

		div(class='ui-bar ui-bar-c')
			input#new-task(type='text', name='name', placeholder="What needs to be done...")
			button#create-task(data-role="button", data-icon='plus', data-theme="b") Add

		div(data-role='content')
			ul#task-list(data-role='listview', data-inset='true', data-autodividers='true', data-split-icon="delete")


append scripts
	script(data-main='/mobile/js/main', src='/common/js/lib/require/require-2.0.2.js')
	script(src='/socket.io/socket.io.js')
