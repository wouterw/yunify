extends ../layouts/layout-desktop

block content
	.page-header
		h1 Group
			small  browser
	.row
		.span3
			.well
				h6 Search
				.input-append
					input.input-small(type='text', data-bind='value: searchquery')
					button.btn(type='button')
						i.icon-search
		.span8.offset1
			.alert.alert-block.fade.in(data-bind='visible: !groups().length')
				button.close(data-dismiss='alert')Ã—
				h4.alert-heading No groups found!
				p We didn't find any groups matching the criteria.
			.groups(data-bind='foreach: groups')
				.rounded-box.grey-box
					a.btn.pull-right(data-bind='attr: { href: $data.link }', title='view')
						i.i.icon-search
					h3(data-bind='text: $data.name')
					em.muted(data-bind='text: $data.description')

append scripts
	script(src='/desktop/js/groups.knockout.js')
