
extends ../layout

block content
	em.muted browse groups:
	.page-header
		h1
			| Groups 
			small search
	.row
		.span3
			.well
				h6 Search
				.input-append
					input.input-small(type='text')
					button.btn(type='button')
						i.icon-search
		.span8.offset1
			- if (groups.length !== 0)
				each group in groups
					.sub_main.rounded(style='width: auto; margin-bottom: 10px; padding: 20px;')
						a.btn.btn-large.btn-primary.pull-right(href='/groups/#{group._id}')
							i.icon-eye-open.icon-white 
							|  View
						h3 #{group.name} 
						span.muted #{group.description} 
			- else
				.alert.alert-info 
					button.close(data-dismiss='alert') Ã—
					| No groups found :(
